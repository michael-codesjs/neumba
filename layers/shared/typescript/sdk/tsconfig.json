{
  "compilerOptions": {
    "target": "ES5",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "disableSourceOfProjectReferenceRedirect": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "exclude": ["*test.ts", "node_modules"]
}
