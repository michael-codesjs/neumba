{
  "compilerOptions": {
    "target": "ES5",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "disableSourceOfProjectReferenceRedirect": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "bin",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared": ["../../../../shared/typescript/sdk/src/index.ts"],
      "@shared/*": ["../../../../shared/typescript/sdk/src/*"],
      "@adapters/*": ["application/adapters/*"],
      "@domain/*": ["application/domain/*"],
      "@errors/*": ["application/errors/*"],
      "@errors": ["application/errors/index.ts"],
      "@interfaces/*": ["application/interfaces/*"],
      "@interfaces": ["application/errors/index.ts"],
      "@repositories/*": ["application/repositories/*"],
      "@repositories": ["application/repositories/index.ts"],
      "@typings/*": ["application/types/*"],
      "@typings": ["application/types/index.ts"],
      "@use-cases/*": ["application/use-cases/*"],
      "@use-cases": ["application/use-cases/index.ts"],
      "@utilities/*": ["application/utilities/*"]
    }
  },
  "references": [
    { "path": "../../../../shared/typescript/sdk" }
  ],
  "typeAcquisition": {
    "include": ["jest"]
  }
}